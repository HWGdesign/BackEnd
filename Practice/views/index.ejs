<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %> <%- include('./partials/footer.ejs') %>
    <div class="wrapper">
      <div class="content">
        <h1>My Blogs:</h1>
        <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
        <div class="blog-content">
          <h2><%= blog.title %></h2>
          <p><%= blog.snippet %></p>
          <% }) %> <% } else {%>
          <p>There is no blogs</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
