<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
    * {
      margin: 0;
      padding: 0;
      font-family: 'Inter', sans-serif;
    }

    a {
      font-size: 1.15rem;
      font-weight: 600;
      text-decoration: none;
      transition: background-color 200ms ease-in;
      padding: 5px 10px;
    }

    .navigation .right a:hover {
      background-color: rgb(192, 189, 189);
      border-radius: 5px;
    }

    .navigation {
      display: grid;
      grid-template-columns: 150px 1fr;
      width: 100%;
      height: 100px;
      border-bottom: 1px solid rgb(192, 189, 189);
    }

    .navigation .pageName {
      font-size: 2rem;
    }

    .navigation .left {
      display: flex;
      justify-content: center;
      align-items: center;
      padding-left: 20px;
    }

    .navigation .right {
      display: flex;
      justify-content: right;
      align-items: center;
      padding-right: 20px;
    }

    ul {
      display: flex;
    }

    li {
      padding: 1rem;
      list-style: none;
    }

    .content {
      padding: 2rem 2rem;
    }

    .content h1,
    .content h2,
    .content h3 {
      padding: 0.5rem 0;
    }

    .content p {
      color: rgb(192, 189, 189);
      font-weight: 600;
    }

    footer {
      position: absolute;
      bottom: 0;
      height: 100px;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  </style>
</head>
